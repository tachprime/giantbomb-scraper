<!-- Modal Structure -->
<div id="commentModal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4>Comments</h4>
        <ul class="messages collection"></ul>
    </div>
    <div class="modal-footer">
        <form name="commentForm" id="commentForm">
            <div class="row">
                <div class="input-field col s4">
                    <i class="material-icons prefix">account_circle</i>
                    <input required placeholder="User Name" type="text" name="userName" id="userName">
                </div>
                <div class="input-field col s8">
                    <i class="material-icons prefix">chat</i>
                    <input required placeholder="Comment" type="text" name="commentText" id="commentText">
                </div>
            </div>
            <button class="btn black left" type="submit" id="commentButton">
                <i class="material-icons prefix">mode_edit</i>Post comment
            </button>
            <a href="/" class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
        </form>

    </div>
</div>